#include <Servo.h>

Servo myServo;

const int trigPin = 7;  // Ultrasonic Trigger pin
const int echoPin = 8;  // Ultrasonic Echo pin

void setup() {
  myServo.attach(9);        // Attach servo to pin 9
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  Serial.begin(9600);
}

float getDistance() {
  // Send a 10 microsecond pulse to trigger ultrasonic sensor
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  // Read the echo pin, pulseIn returns duration in microseconds
  long duration = pulseIn(echoPin, HIGH, 30000); // 30 ms timeout

  // If no pulse received, duration will be 0
  if (duration == 0) {
    return -1;  // Indicate no reading
  }

  // Calculate distance in cm: speed of sound = 343 m/s = 0.0343 cm/us
  float distance = (duration * 0.0343) / 2;
  return distance;
}

void loop() {
  // Move servo from 40 to 145 gradually
  for (int pos = 40; pos <= 145; pos=pos+4) {
    float distance = getDistance();
    if (distance < 0) {
      Serial.println("No echo detected");
    } else {
      Serial.print("Distance: ");
      Serial.print(distance);
      Serial.println(" cm");
    }
    
    if (distance > 0 && distance < 14) {
      Serial.println("Object detected! Stopping servo.");
      break;
    }
    
    myServo.write(pos);
    delay(15);
  }
  delay(1000);

  // Move servo from 145 back to 40 gradually
  for (int pos = 145; pos >= 40; pos=pos-4) {
    float distance = getDistance();
    if (distance < 0) {
      Serial.println("No echo detected");
    } else {
      Serial.print("Distance: ");
      Serial.print(distance);
      Serial.println(" cm");
    }
    
    if (distance > 0 && distance < 14) {
      Serial.println("Object detected! Stopping servo.");
      break;
    }
    
    myServo.write(pos);
    delay(15);
  }
  delay(1000);
}

